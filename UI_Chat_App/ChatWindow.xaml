<Window x:Class="UI_Chat_App.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:UI_Chat_App.Converters" 
        xmlns:local="clr-namespace:UI_Chat_App"   
        mc:Ignorable="d"
        Title="ChatWindow" Height="500" Width="1000" WindowStyle="None" AllowsTransparency="False" Background="Transparent"
        WindowStartupLocation="CenterScreen" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        ResizeMode="CanResize">
    <Window.Resources>
        <!-- Màu nền nhẹ hơn để làm panel phụ hoặc hover -->
        <SolidColorBrush x:Key="SecondaryColor" Color="#3b3f5c"/>

        <!-- Màu nhấn khi hover vào nút hoặc list item -->
        <SolidColorBrush x:Key="HoverHighlightColor" Color="#50597b"/>

        <!-- Màu dùng cho nền avatar hoặc border viền nhẹ -->
        <SolidColorBrush x:Key="SoftBorderColor" Color="#a0a0b0"/>

        <!-- Màu nền toàn bộ khung chat -->
        <SolidColorBrush x:Key="ChatBackgroundColor" Color="#ecf0f1"/>

        <!-- Màu cho chữ chính -->
        <SolidColorBrush x:Key="TextPrimaryColor" Color="#ffffff"/>

        <!-- Màu cho chữ phụ -->
        <SolidColorBrush x:Key="TextSecondaryColor" Color="#cccccc"/>

        <!-- Animations -->
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>

        <Storyboard x:Key="SlideInFromRight">
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                From="30,0,0,0" To="0" Duration="0:0:0.3"/>
        </Storyboard>

        <Style x:Key="AnimatedBorderStyle" TargetType="Border">
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource FadeInStoryboard}"/>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AnimatedPanelStyle" TargetType="StackPanel">
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1" Duration="0:0:0.3"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                             From="10" To="0" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform Y="0"/>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Animation for user list item -->
        <Style x:Key="UserListItemAnimatedStyle" TargetType="ListBoxItem">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform X="-30"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1" Duration="0:0:0.4"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                             From="-30" To="0" Duration="0:0:0.4"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <!-- Animation for user profile panel -->
        <Storyboard x:Key="SlideInUserProfile">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="30,0,10,10" To="10" Duration="0:0:0.3"/>
        </Storyboard>

        <Storyboard x:Key="HideUserProfile">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.2"/>
        </Storyboard>

        <Storyboard x:Key="SlideOutUserProfile">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.2"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="10" To="30,10,10,10" Duration="0:0:0.2"/>
        </Storyboard>

        <!-- Thêm ImageUrlConverter vào Resources -->
        <converters:ImageUrlConverter x:Key="ImageUrlConverter"/>

        <!-- Thêm các Converter cần thiết -->
        <converters:BooleanToOnlineStatusConverter x:Key="BooleanToOnlineStatusConverter"/>
        <converters:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
        <!-- Thêm Converter để kiểm tra trạng thái lời mời -->
        <converters:HasPendingRequestConverter x:Key="HasPendingRequestConverter"/>

        <!-- Style cho các nút trong cửa sổ -->
        <Style x:Key="WindowButtonStyle" TargetType="Button">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent" BorderBrush="Transparent" BorderThickness="0" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5, 0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.2" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.2" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Style cho nút đóng cửa sổ -->
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowButtonStyle}">
            <Setter Property="Foreground" Value="Red"/>
        </Style>
        <!-- Style cho TextBox tin nhắn -->
        <Style x:Key="MessageTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="MaxHeight" Value="1000"/>
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Style cho TextBox tìm kiếm -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Style cho tin nhắn căn phải -->
        <Style x:Key="RightAlignedMessageStyle" TargetType="TextBlock" >
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Margin" Value="5,5,5,0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="TextWrapping" Value="Wrap"/>

        </Style>
        <!-- Style cho ListBox bo tròn -->
        <Style x:Key="RoundedListBoxStyle" TargetType="ListBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <!-- DataTemplate cho danh sách bạn bè -->
        <DataTemplate x:Key="UserBoxTemplate">
            <Border Background="White" 
            BorderBrush="#E0E0E0" 
            BorderThickness="1" 
            CornerRadius="12" 
            Padding="10" 
            Margin="5"
            SnapsToDevicePixels="True">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="Gray" Opacity="0.2"/>
                </Border.Effect>
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Avatar -->
                    <Border Width="50" Height="50" CornerRadius="25" ClipToBounds="True" Grid.Column="0">
                        <Image Source="{Binding Avatar, Converter={StaticResource ImageUrlConverter}, FallbackValue='Icons/user.png'}" 
                       Width="50" Height="50"
                       Stretch="UniformToFill"/>
                    </Border>

                    <!-- User Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding DisplayName}" 
                   FontSize="16" 
                   FontWeight="SemiBold" 
                   Foreground="#333333"/>

                            <TextBlock Text="📌"
           FontSize="16"
           Visibility="{Binding Tag, Converter={StaticResource PriorityToVisibilityConverter}}"
           Margin="5,0,0,0"/>
                            <!-- Icon block nếu đã block -->
                            <TextBlock Text="🚫"
           Visibility="{Binding IsBlocked, Converter={StaticResource BlockToVisibilityConverter}}"
           Margin="5,0,0,0" />

                        </StackPanel>

                        <TextBlock Text="{Binding IsOnline, Converter={StaticResource BooleanToOnlineStatusConverter}}" 
               FontSize="12" 
               Foreground="{Binding IsOnline, Converter={StaticResource BooleanToColorConverter}}" 
               Margin="0,3,0,0"/>
                    </StackPanel>


                    <!-- Popup và nút More Options -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <Button x:Name="MoreOptionsButton"
                                Width="30" Height="30"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="MoreOptionsButton_Click"
                                ToolTip="More Options"
                                Style="{StaticResource WindowButtonStyle}">
                            <Image Source="Icons/more_options.png" Width="20" Height="20"/>
                        </Button>

                        <Popup x:Name="DeletePopup"
                               Placement="Top"
                               PlacementTarget="{Binding ElementName=MoreOptionsButton}"
                               StaysOpen="False"
                               AllowsTransparency="True">
                            <Border Background="White" CornerRadius="8" Padding="5" BorderBrush="LightGray" BorderThickness="1">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                                    <!-- Nút Trash -->
                                    <Button Width="30" Height="30"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Click="DeleteUserButton_Click"
                                            Style="{StaticResource WindowButtonStyle}">
                                        <Image Source="Icons/trash.png" Width="20" Height="20"/>
                                    </Button>

                                    <!-- Nút Thumbtack -->
                                    <Button Width="30" Height="30"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Click="ThumbtackButton_Click"
                                            Style="{StaticResource WindowButtonStyle}">
                                        <Image Source="Icons/thumbtack.png" Width="20" Height="20"/>
                                    </Button>

                                    <!-- Nút Block -->
                                    <Button Width="30" Height="30"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Click="BlockUserButton_Click"
                                            Style="{StaticResource WindowButtonStyle}">
                                        <Image Source="Icons/block.png" Width="20" Height="20"/>
                                    </Button>
                                </StackPanel>
                            </Border>

                        </Popup>
                    </StackPanel>

                </Grid>

                <!-- Hover effect -->
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Border.RenderTransform>
                <Border.RenderTransformOrigin>0.5,0.5</Border.RenderTransformOrigin>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                             To="1.05" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                             To="1.05" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                             To="1" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                             To="1" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </DataTemplate>

        <!-- Template cho Group -->
        <DataTemplate x:Key="GroupBoxTemplate">
            <Border Background="White" 
            BorderBrush="#E0E0E0" 
            BorderThickness="1" 
            CornerRadius="12" 
            Padding="10" 
            Margin="5"
            SnapsToDevicePixels="True">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="Gray" Opacity="0.2"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Avatar nhóm -->
                    <Border Width="50" Height="50" CornerRadius="25" ClipToBounds="True" Grid.Column="0">
                        <Image Source="{Binding Avatar, Converter={StaticResource ImageUrlConverter}, FallbackValue='Icons/user.png'}" 
                           Width="50" Height="50"
                           Stretch="UniformToFill"/>
                    </Border>

                    <!-- Thông tin nhóm -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                        <TextBlock Text="{Binding Name}" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Foreground="#333333"/>
                        <TextBlock Text="Group Chat" 
                           FontSize="12" 
                           Foreground="DarkSlateGray" 
                           Margin="0,3,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <Popup x:Name="DeletePopup"
                       Placement="Top"
                       PlacementTarget="{Binding ElementName=MoreOptionsButton}"
                       StaysOpen="False"
                       AllowsTransparency="True">
                            <Border Background="White" CornerRadius="8" Padding="5" BorderBrush="LightGray" BorderThickness="1">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                </StackPanel>
                            </Border>
                        </Popup>
                    </StackPanel>
                </Grid>

                <!-- Hover effect giống user -->
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Border.RenderTransform>
                <Border.RenderTransformOrigin>0.5,0.5</Border.RenderTransformOrigin>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                     To="1.05" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                     To="1.05" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                     To="1" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                     To="1" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </DataTemplate>

        <!-- Template selector -->
        <local:MixedItemTemplateSelector x:Key="MixedSelector"
                                     UserTemplate="{StaticResource UserBoxTemplate}"
                                     GroupTemplate="{StaticResource GroupBoxTemplate}"/>

    </Window.Resources>
    <Border Background="#e0ffff" CornerRadius="30">
        <Grid>
            <Grid.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource FadeInStoryboard}"/>
                </EventTrigger>
            </Grid.Triggers>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition x:Name="UserProfileColumn" Width="0"/>
            </Grid.ColumnDefinitions>

            <!-- Các nút điều khiển cửa sổ -->
            <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                <Button FontSize="30" Content="-" Width="30" Height="30" Click="MinimizeButton_Click" Style="{StaticResource WindowButtonStyle}"/>
                <Button FontSize="25" Content="🗖" Width="30" Height="30" Click="MaximizeButton_Click" Style="{StaticResource WindowButtonStyle}"/>
                <Button FontSize="20" Content="✖" Width="30" Height="30" Click="CloseButton_Click" Style="{StaticResource CloseButtonStyle}"/>
            </StackPanel>

            <!-- Thông tin người dùng hiện tại -->
            <Grid Grid.Row="0" Grid.Column="0" Margin="20,10" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Cột cho Avatar -->
                    <ColumnDefinition Width="*"/>
                    <!-- Cột cho Tên người dùng -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- Cột cho nút Logout -->

                </Grid.ColumnDefinitions>

                <!-- Avatar -->
                <Image Source="{Binding Source={x:Static local:App.CurrentUser}, Path=Avatar, Converter={StaticResource ImageUrlConverter}, FallbackValue='Icons/user.png'}" 
           Width="30" Height="30" Margin="0,0,10,0" 
           MouseLeftButtonDown="UserAvatar_Click" 
           Cursor="Hand" RenderTransformOrigin="1,1"
           Grid.Column="0"/>

                <!-- Tên người dùng -->
                <TextBlock x:Name="UsernameTextBlock" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="Black" 
               TextTrimming="CharacterEllipsis" Margin="0,0,10,0" Grid.Column="1" MouseLeftButtonUp="DisplayName_MouseLeftButtonUp"/>

                <!-- Nút Logout -->
                <Button Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" Click="LogoutButton_Click" Style="{StaticResource WindowButtonStyle}" Grid.Column="2">
                    <Image Source="Icons/logout.png" Width="20" Height="20"/>
                </Button>
            </Grid>

            <!-- Cột danh sách người dùng -->
            <Border Grid.Row="1" Grid.Column="0" Background="#b0e0e6" CornerRadius="20,20,20,20" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Bỏ StackPanel - Thay bằng Grid -->
                    <Grid Grid.Row="0" Margin="10" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Thanh SearchTextBox -->
                        <TextBox x:Name="SearchTextBox"
             Grid.Column="0"
             Visibility="Hidden"
             Style="{StaticResource SearchTextBoxStyle}"
             VerticalAlignment="Center"
             HorizontalAlignment="Stretch"
             Margin="0,0,5,0"
             TextChanged="SearchTextBox_TextChanged"/>

                        <!-- Nút Search -->
                        <Button x:Name="SearchButton"
            Grid.Column="1"
            Width="30"
            Height="30"
            Background="Transparent"
            BorderBrush="Transparent"
            Click="SearchButtonListUser_Click"
            Style="{StaticResource WindowButtonStyle}">
                            <Image Source="Icons/search.png" Width="20" Height="20"/>
                        </Button>

                        <!--Nút notification-->
                        <Button x:Name="NotificationButton"
                            Width="30" Height="30"
                            Grid.Column="2"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Click="NotificationButton_Click"
                            Style="{StaticResource WindowButtonStyle}">
                            <Grid>
                                <Image Source="Icons/notification.png" Width="20" Height="20"/>

                                <TextBlock x:Name="NotificationCountText"
                                           Text="0"
                                           FontSize="10"
                                           FontWeight="Bold"
                                           Foreground="Red"
                                           Background="White"
                                           TextAlignment="Center"
                                           VerticalAlignment="Top"
                                           HorizontalAlignment="Right"
                                           Margin="0,0,0,0"
                                           Visibility="Collapsed"
                                           Width="14" Height="14"
                                           Padding="0"
                                           ClipToBounds="True"/>
                            </Grid>
                        </Button>
                        <Popup x:Name="NotificationPopup"
                               Placement="Custom"
                               CustomPopupPlacementCallback="NotificationPopup_PlacementCallback"
                               StaysOpen="False"
                               AllowsTransparency="True"
                               PopupAnimation="Slide">
                            <Border Background="White"
                                    BorderBrush="Gray"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Padding="10"
                                    Width="250" Height="300"
                                    SnapsToDevicePixels="True">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="NotificationListPanel">
                                        <!-- Các item  thông báo sẽ được thêm tại đây từ C# -->
                                    </StackPanel>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>

                    <!-- TabControl cho danh sách bạn bè và thêm bạn -->
                    <TabControl x:Name="TabControl" Grid.Row="1" SelectionChanged="TabControl_SelectionChanged">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Border x:Name="Border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="10"
                                                    Padding="8">
                                                <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          ContentSource="Header"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#FFDDDDDD"/>
                                                    <Setter TargetName="Border" Property="BorderBrush" Value="#FF007ACC"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#FFEAEAEA"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TabControl.Resources>

                        <TabControl.Template>
                            <ControlTemplate TargetType="TabControl">
                                <Grid>
