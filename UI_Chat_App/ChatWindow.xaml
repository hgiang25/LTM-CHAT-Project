                            </Button>
                            
                            <Button Width="40" Height="40" Background="Transparent" BorderBrush="Transparent" Margin="0,0,5,0" Click="Optional_Click" Style="{StaticResource WindowButtonStyle}">
                                <Image Source="Icons/optional.png" Width="20" Height="20"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                    <TextBlock x:Name="EmptyPromptTextBlock" FontSize="30"
                               FontStyle="Italic"
                               FontWeight="Bold"
                               Grid.Row="1" Grid.ColumnSpan="2" Text="Please choose someone to start" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray" Margin="10"/>
                    <ScrollViewer x:Name="MessagesScrollViewer" Grid.Row="1" Grid.ColumnSpan="2" VerticalScrollBarVisibility="Auto" Margin="10">
                        <StackPanel x:Name="MessagesStackPanel"/>
                    </ScrollViewer>
                    <Grid Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <StackPanel Margin="5" Grid.Column="0" Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                                <Popup x:Name="AttachOptionsPanel" Placement="Top" PlacementTarget="{Binding ElementName=AttachButton}" StaysOpen="False" AllowsTransparency="True">
                                    <Border Background="White" BorderBrush="LightGray" BorderThickness="1" CornerRadius="10" SnapsToDevicePixels="True">
                                        <StackPanel Orientation="Horizontal" Margin="5">
                                            <Button x:Name="ImageButton" Width="40" Height="40" Margin="5" Background="Transparent" BorderThickness="0" Click="ImageButton_Click" Style="{StaticResource WindowButtonStyle}">
                                                <Image Source="Icons/image.png" Width="20" Height="20"/>
                                            </Button>
                                            <Button x:Name="DownloadButton" Width="40" Height="40" Margin="5" Background="Transparent" BorderThickness="0" Click="DownloadButton_Click" Style="{StaticResource WindowButtonStyle}">
                                                <Image Source="Icons/download.png" Width="20" Height="20"/>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </Popup>


                                <!-- Attach Button -->
                                <Button x:Name="AttachButton" Width="40" Height="40" Margin="5" Background="Transparent" BorderThickness="0" Click="AttachButton_Click" Style="{StaticResource WindowButtonStyle}">
                                    <Image Source="Icons/attach.png" Width="20" Height="20" RenderTransformOrigin="1,1"/>
                                </Button>
                            </StackPanel>
                            <Button x:Name="VoiceRecordButton" Width="40" Height="40" Margin="5" Background="Transparent" BorderThickness="0" Click="VoiceRecordButton_Click" Style="{StaticResource WindowButtonStyle}">
                                <Image Source="Icons/mic_on.png" Width="20" Height="20" RenderTransformOrigin="1,1"/>
                            </Button>
                        </StackPanel>
                        <TextBox x:Name="MessageTextBox"
                                 Grid.Column="1"
                                 AcceptsReturn="False"
                                 TextWrapping="Wrap"
                                 KeyDown="MessageTextBox_KeyDown"
                                 TextChanged="MessageTextBox_TextChanged"
                                 Style="{StaticResource MessageTextBoxStyle}"/>

                        <TextBlock x:Name="TypingStatusTextBlock"
                                   Text=""
                                   Visibility="Collapsed"
                                   Foreground="Gray"
                                   FontStyle="Italic"
                                   Margin="10,0,10,10"/>

                        <UniformGrid Grid.Column="2" Columns="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <!-- Nút Like -->
                            <Button x:Name="LikeButton" Width="40" Height="40" Margin="5" Background="Transparent" BorderThickness="0" Click="LikeButton_Click" Style="{StaticResource WindowButtonStyle}">
                                <Image Source="Icons/like.png" Width="20" Height="20"/>
                            </Button>

                            <!-- Popup cho Emoji -->
                            <Popup x:Name="EmojiPopup" HorizontalOffset="-50" Placement="Top" PlacementTarget="{Binding ElementName=LikeButton}" StaysOpen="False" AllowsTransparency="True">
                                <Border Background="White" CornerRadius="8" Padding="5" BorderBrush="LightGray" BorderThickness="1">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <!-- Thêm các nút emoji -->
                                        <Button Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" Click="EmojiButton_Click" Tag="cuoikhinh" Style="{StaticResource WindowButtonStyle}">
                                            <Image Source="Emoji/cuoikhinh.png" Width="20" Height="20"/>
                                        </Button>
                                        <Button Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" Click="EmojiButton_Click" Tag="haha" Style="{StaticResource WindowButtonStyle}">
                                            <Image Source="Emoji/haha.png" Width="20" Height="20"/>
                                        </Button>
                                        <Button Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" Click="EmojiButton_Click" Tag="khongcamxuc" Style="{StaticResource WindowButtonStyle}">
                                            <Image Source="Emoji/khongcamxuc.png" Width="20" Height="20"/>
                                        </Button>
                                        <Button Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" Click="EmojiButton_Click" Tag="ngau" Style="{StaticResource WindowButtonStyle}">
                                            <Image Source="Emoji/ngau.png" Width="20" Height="20"/>
                                        </Button>
                                        <Button Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" Click="EmojiButton_Click" Tag="phanno" Style="{StaticResource WindowButtonStyle}">
                                            <Image Source="Emoji/phanno.png" Width="20" Height="20"/>
                                        </Button>
                                        <Button Width="30" Height="30" Background="Transparent" BorderBrush="Transparent" Click="EmojiButton_Click" Tag="emolike" Style="{StaticResource WindowButtonStyle}">
                                            <Image Source="Emoji/emolike.png" Width="20" Height="20"/>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </Popup>

                            <!-- Nút Send -->
                            <Button x:Name="SendButton" Width="40" Height="40" Margin="5" Background="Transparent" BorderThickness="0" Click="SendButton_Click" Style="{StaticResource WindowButtonStyle}">
                                <Image Source="Icons/send.png" Width="20" Height="20"/>
                            </Button>
                        </UniformGrid>
                    </Grid>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1"
               Grid.Row="1"
              Width="10"
              Background="Transparent"
              ResizeBehavior="CurrentAndNext"
              ResizeDirection="Columns" Margin="0,10,0,0"/>


            <Border x:Name="UserProfilePanel"
                    Grid.Row="1"
                    Grid.Column="2"
                    Background="CadetBlue"
                    CornerRadius="20"
                    Margin="5"
                    Opacity="0"
                    Visibility="Visible">
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Border.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>

                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="User Profile" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                        <Image x:Name="ProfileAvatar" Width="100" Height="100" Margin="0,10,0,10" Cursor="Hand"/>
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="ProfileUsername" Text="{Binding CurrentUser.DisplayName}" FontSize="16" Foreground="White" Margin="0,10,0,0"/>
                            <!-- TextBox để chỉnh sửa (ban đầu ẩn) -->
                            <TextBox x:Name="ProfileUsernameTextBox" Grid.Column="0"
                                     Visibility="Collapsed"
                                     FontSize="16" Margin="0,10,0,0" Padding="2"
                                     VerticalAlignment="Center"
                                     KeyDown="UsernameEditTextBox_KeyDown"
                                     LostFocus="UsernameEditTextBox_LostFocus"/>

                            <Button x:Name="EditUsernameButton" Grid.Column="1" 
                                    Width="30" Height="30" 
                                    Background="Transparent" BorderBrush="Transparent" 
                                    Click="EditUsernameButton_Click"
                                    Style="{StaticResource WindowButtonStyle}">
                                <Image Source="Icons/user_pen.png" Width="16" Height="16"/>
                            </Button>
                        </Grid>
                        <TextBlock x:Name="ProfileEmail" Text="{Binding CurrentUser.Email}" FontSize="16" Foreground="White" Margin="0,10,0,0"/>
                        <TextBlock x:Name="ProfileStatus" Text="{Binding CurrentUser.IsOnline, Converter={StaticResource BooleanToOnlineStatusConverter}}" FontSize="16" Foreground="White" Margin="0,10,0,0"/>
                    </StackPanel>

                </ScrollViewer>
            </Border>

            <Border x:Name="GroupProfilePanel" Visibility="Collapsed" Grid.Column="2" Grid.Row="1" Background="{StaticResource SecondaryColor}" Margin="10" CornerRadius="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <Image x:Name="GroupProfileAvatar" MouseLeftButtonDown="GroupProfileAvatar_MouseLeftButtonDown" Grid.Column="0" Width="100" Height="100" Stretch="UniformToFill" HorizontalAlignment="Center" Source="{Binding SelectedGroup.Avatar, Converter={StaticResource ImageUrlConverter}}"/>
                            <Grid Margin="15,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="GroupProfileName" Grid.Column="0" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryColor}" Margin="0,10,0,5" TextAlignment="Center"/>
                            <TextBox x:Name="ProfileGroupTextBox" Grid.Column="0"
                                     Visibility="Collapsed"
                                     FontSize="16" Margin="0,10,0,0" Padding="2"
                                     VerticalAlignment="Center"
                                     KeyDown="GroupnameEditTextBox_KeyDown"
                                     LostFocus="GroupnameEditTextBox_LostFocus"/>
                            <Button x:Name="EditGroupNameButton" Grid.Column="1" 
                                    Width="30" Height="30" 
                                    VerticalAlignment="Bottom"
                                    Background="Transparent" BorderBrush="Transparent" 
                                    Click="EditGroupNameButton_Click"
                                    Style="{StaticResource WindowButtonStyle}">
                                <Image Source="Icons/group_pen.png" Width="16" Height="16"/>
                            </Button>
                        </Grid>
                        <TextBlock x:Name="GroupCreatedBy" FontSize="14" Foreground="{StaticResource TextSecondaryColor}" Margin="0,2" TextAlignment="Center"/>
                        <TextBlock x:Name="GroupMemberCount" FontSize="14" Foreground="{StaticResource TextSecondaryColor}" Margin="0,2 0,10" TextAlignment="Center"/>

                        <!-- Buttons -->
                        <StackPanel Orientation="Vertical" Margin="0,10,0,0" HorizontalAlignment="Stretch">
                            <Button x:Name="ViewMembersButton" Content="👥 View Members" Margin="0,5" Height="35" Click="ViewMembersButton_Click" Style="{StaticResource WindowButtonStyle}"/>
                            <!-- Phần hiện danh sách thành viên nhóm -->
                            <!-- Danh sách thành viên -->
                            <ListBox x:Name="GroupMembersList" Margin="10,5,0,0" Visibility="Collapsed" Height="200">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5,2,5,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" FontSize="14" Foreground="Black">
                                                    <Run Text="• " />
                                                    <Run Text="{Binding DisplayName}" />
                                            </TextBlock>

                                            <Button Grid.Column="1" Content="X" 
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Margin="20,0,0,0"
                                                FontWeight="Bold"
                                                Foreground="Red"
                                                Background="Transparent"
                                                BorderBrush="Transparent"
                                                Cursor="Hand"
                                                Tag="{Binding Id}"
                                                Click="RemoveMemberButton_Click"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>


                            <TextBlock x:Name="PendingMembersLabel" Text="Pending Members" FontWeight="Bold"
                            FontSize="14" Margin="10,10,0,5" Visibility="Collapsed" />

                            <ListBox x:Name="PendingMembersListBox" SelectionMode="Multiple" Margin="10,0,0,10" Height="200" Visibility="Collapsed">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="5"/>
                                            <TextBlock Text="{Binding DisplayName}" FontSize="14" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Button Content="Duyệt thành viên đã chọn"
                                    Margin="10,0,0,10"
                                    Width="200"
                                    Height="30"
                                    Click="ApproveSelectedPendingMembers_Click"
                                    Visibility="Collapsed"
                                    x:Name="ApproveSelectedButton"/>

                            <Button x:Name="RejectSelectedButton"
                                    Margin="10,0,0,10"
                                    Width="200"
                                    Height="30"
                                    Content="Reject Selected"
                                    Click="RejectSelectedPendingMembers_Click"
                                    Visibility="Collapsed"/>


                            <Button x:Name="InviteMemberButton" Content="➕ Invite Member" Margin="0,5" Height="35" Click="InviteMemberButton_Click" Style="{StaticResource WindowButtonStyle}"/>
                            <TextBlock x:Name="InviteFriendLabel" Text="Mời bạn vào nhóm" FontWeight="Bold"
                                        FontSize="14" Margin="10,10,0,5" Visibility="Collapsed" />

                            <ListBox x:Name="FriendCheckboxList" SelectionMode="Multiple" Margin="10,0,0,10"
                                    Height="200" Visibility="Collapsed">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="5"/>
                                            <TextBlock Text="{Binding DisplayName}" FontSize="14" VerticalAlignment="Center" Margin="5,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Button Content="Mời"
                                    Margin="10,0,0,10"
                                    Width="200"
                                    Height="30"
                                    Click="ConfirmInvite_Click"
                                    Visibility="Collapsed"
                                    x:Name="ConfirmInviteButton"/>

                            <Button x:Name="LeaveGroupButton" Content="🚪 Leave Group" Margin="0,5" Height="35" 
                                    Click="LeaveGroupButton_Click" Style="{StaticResource WindowButtonStyle}" 
                                    Foreground="Red"/>
                            <Button x:Name="DeleteGroupButton"
                                Content="🗑 Delete Group"
                                Margin="0,5"
                                Height="35"
                                Click="DeleteGroupButton_Click"
                                Visibility="Collapsed"
                                Style="{StaticResource WindowButtonStyle}"
                                Foreground="Red"/>

                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Border>
</Window>
    