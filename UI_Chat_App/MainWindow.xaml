<Window x:Class="UI_Chat_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_Chat_App"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" 
        Title="Login" Height="500" Width="800" Background="Transparent" WindowStyle="None" AllowsTransparency="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="SharedResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="40" BorderBrush="#BDC3C7" BorderThickness="2">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#3498DB" Offset="0.0"/>
                <GradientStop Color="#2ECC71" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Các nút điều khiển cửa sổ -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                <Button FontSize="30" Content="-" Width="30" Height="30" Click="MinimizeButton_Click" Style="{StaticResource WindowButtonStyle}"/>
                <Button FontSize="25" Content="⛶" Width="30" Height="30" Click="MaximizeButton_Click" Style="{StaticResource WindowButtonStyle}"/>
                <Button FontSize="20" Content="✖" Width="30" Height="30" Click="CloseButton_Click" Style="{StaticResource CloseButtonStyle}"/>
            </StackPanel>

            <!-- Grid chính chứa nội dung đăng nhập và đăng ký -->
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Tiêu đề chào mừng -->
                <TextBlock x:Name="TitleTextBlock" Text="Welcome Back!" Foreground="#FFFFFF" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Margin="0,20,0,10"/>

                <!-- Grid chứa các thành phần đăng nhập -->
                <Grid x:Name="LoginGrid" Grid.Row="1" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- TextBox nhập tên người dùng -->
                    <Grid Margin="0,10">
                        <Grid>
                            <TextBox x:Name="UsernameTextBox" Width="300" Height="50" Padding="10,0" FontSize="14" Background="#FFFFFF" Foreground="#2C3E50" BorderBrush="#BDC3C7" Style="{StaticResource RoundedTextBoxStyle}" Text="" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                            <TextBlock x:Name="UsernamePlaceholder" Text="Username" Foreground="Gray" VerticalAlignment="Center" Margin="15,0" IsHitTestVisible="False"/>
                        </Grid>
                    </Grid>
                    <!-- PasswordBox nhập mật khẩu -->
                    <Grid Margin="0,10" Grid.Row="1">
                        <Grid>
                            <PasswordBox x:Name="PasswordBox" Width="300" Height="50" Padding="10,0" FontSize="14" Background="#FFFFFF" Foreground="#2C3E50" BorderBrush="#BDC3C7" Style="{StaticResource RoundedPasswordBoxStyle}" PasswordChanged="PasswordBox_PasswordChanged" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus"/>
                            <TextBlock x:Name="PasswordPlaceholder" Text="Password" Foreground="Gray" VerticalAlignment="Center" Margin="15,0" IsHitTestVisible="False"/>
                        </Grid>
                    </Grid>

                    <!-- TextBlock hiển thị thông báo lỗi -->
                    <TextBlock x:Name="ErrorMessageTextBlock" Foreground="Red" Visibility="Collapsed" Margin="10" Grid.Row="2" HorizontalAlignment="Left"/>

                    <!-- Nút đăng nhập -->
                    <Button Width="300" Height="50" Content="Login" Margin="0,10" Click="LoginButton_Click" Grid.Row="3"  Style="{StaticResource RoundedButtonStyle}"/>

                    <!-- TextBlock quên mật khẩu -->
                    <TextBlock Text="Forgot Password?" Foreground="#FFFFFF" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="4" Cursor="Hand" MouseLeftButtonUp="ForgotPasswordTextBlock_MouseLeftButtonUp" MouseEnter="TextBlock_MouseEnter" MouseLeave="TextBlock_MouseLeave"/>

                    <!-- TextBlock đăng ký tài khoản mới -->
                    <TextBlock Text="Don't have an account? Sign Up" Foreground="#FFFFFF" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="5" Cursor="Hand" MouseLeftButtonUp="SignUpTextBlock_MouseLeftButtonUp" MouseEnter="TextBlock_MouseEnter" MouseLeave="TextBlock_MouseLeave"/>
                </Grid>
            </Grid>

        </Grid>
    </Border>
</Window>
