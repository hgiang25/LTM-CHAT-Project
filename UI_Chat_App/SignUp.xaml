<Window x:Class="UI_Chat_App.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_Chat_App"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" 
        Title="Sign Up" Height="500" Width="800" Background="Transparent" WindowStyle="None" AllowsTransparency="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="SharedResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border CornerRadius="40" BorderBrush="#BDC3C7" BorderThickness="2">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#3498DB" Offset="0.0"/>
                <GradientStop Color="#2ECC71" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Các nút điều khiển cửa sổ -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                <Button FontSize="30" Content="-" Width="30" Height="30" Click="MinimizeButton_Click" Style="{StaticResource WindowButtonStyle}"/>
                <Button FontSize="25" Content="⛶" Width="30" Height="30" Click="MaximizeButton_Click" Style="{StaticResource WindowButtonStyle}"/>
                <Button FontSize="20" Content="✖" Width="30" Height="30" Click="CloseButton_Click" Style="{StaticResource CloseButtonStyle}"/>
            </StackPanel>

            <!-- Grid chính chứa nội dung đăng ký -->
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Tiêu đề đăng ký -->
                <TextBlock x:Name="TitleTextBlock" Text="Create an Account" Foreground="#FFFFFF" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Margin="0,20,0,10"/>

                <!-- Grid chứa các thành phần đăng ký -->
                <Grid x:Name="SignUpGrid" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- TextBox nhập email -->
                    <Grid Margin="0,5">
                        <Grid>
                            <TextBox x:Name="EmailTextBox" Width="300" Height="50" Padding="10,0" FontSize="14" Background="#FFFFFF" Foreground="#2C3E50" BorderBrush="#BDC3C7" Style="{StaticResource RoundedTextBoxStyle}" Text="" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                            <TextBlock x:Name="EmailPlaceholder" Text="Email" Foreground="Gray" VerticalAlignment="Center" Margin="15,0" IsHitTestVisible="False"/>
                        </Grid>
                    </Grid>
                    <!-- TextBox nhập tên người dùng -->
                    <Grid Margin="0,5" Grid.Row="1">
                        <Grid>
                            <TextBox x:Name="SignUpUsernameTextBox" Width="300" Height="50" Padding="10,0" FontSize="14" Background="#FFFFFF" Foreground="#2C3E50" BorderBrush="#BDC3C7" Style="{StaticResource RoundedTextBoxStyle}" Text="" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
                            <TextBlock x:Name="SignUpUsernamePlaceholder" Text="Username" Foreground="Gray" VerticalAlignment="Center" Margin="15,0" IsHitTestVisible="False"/>
                        </Grid>
                    </Grid>
                    <!-- PasswordBox nhập mật khẩu mới -->
                    <Grid Margin="0,5" Grid.Row="2">
                        <Grid>
                            <PasswordBox x:Name="NewPasswordBox" Width="300" Height="50" Padding="10,0" FontSize="14" Background="#FFFFFF" Foreground="#2C3E50" BorderBrush="#BDC3C7" Style="{StaticResource RoundedPasswordBoxStyle}" PasswordChanged="PasswordBox_PasswordChanged" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus"/>
                            <TextBlock x:Name="NewPasswordPlaceholder" Text="New Password" Foreground="Gray" VerticalAlignment="Center" Margin="15,0" IsHitTestVisible="False"/>
                        </Grid>
                    </Grid>
                    <!-- PasswordBox xác nhận mật khẩu -->
                    <Grid Margin="0,5" Grid.Row="3">
                        <Grid>
                            <PasswordBox x:Name="ConfirmPasswordBox" Width="300" Height="50" Padding="10,0" FontSize="14" Background="#FFFFFF" Foreground="#2C3E50" BorderBrush="#BDC3C7" Style="{StaticResource RoundedPasswordBoxStyle}" PasswordChanged="PasswordBox_PasswordChanged" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus"/>
                            <TextBlock x:Name="ConfirmPasswordPlaceholder" Text="Confirm Password" Foreground="Gray" VerticalAlignment="Center" Margin="15,0" IsHitTestVisible="False"/>
                        </Grid>
                    </Grid>

                    <!-- TextBlock hiển thị thông báo lỗi -->
                    <TextBlock x:Name="SignUpErrorMessageTextBlock" Foreground="Red" Visibility="Collapsed" Margin="10" Grid.Row="4" HorizontalAlignment="Left"/>

                    <!-- Nút đăng ký -->
                    <Button Width="300" Height="50" Content="Sign Up" Margin="0,5" Grid.Row="5" Click="SignUpButton_Click" Style="{StaticResource RoundedButtonStyle}"/>

                    <!-- TextBlock chuyển sang đăng nhập -->
                    <TextBlock Text="Already have an account? Login" Foreground="#FFFFFF" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="6" Cursor="Hand" MouseLeftButtonUp="LoginTextBlock_MouseLeftButtonUp" MouseEnter="TextBlock_MouseEnter" MouseLeave="TextBlock_MouseLeave"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
